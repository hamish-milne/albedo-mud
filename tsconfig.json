{
	"compilerOptions": {
		"module": "Node18",
		"moduleResolution": "node16",
		"verbatimModuleSyntax": true,
		"target": "ES2022",
		"lib": ["ES2022"],
		"isolatedModules": true,
		"declaration": false,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmit": true
	},
	"include": ["./src/**/*.ts"]
}
